{% block title %}Login{% endblock %}
{% block pageTitle %}<h2>Login</h2>{% endblock %}
{% block breadCrumbs %}
    <ol class="breadcrumb">
        <li><i class="fa fa-home"></i></li>
        <li><a href="http://prisk.or.ke/index.php/en" class="pathway">Home</a></li>
        <li class="active">Login</li>
    </ol>
{% endblock %}
{% block body %}
    <div id="sp-page-builder" class="sp-page-builder  page-1">

        <div class="vmshop-account account-login">
            <div class="row">
                <h1 class="col-lg-12 header">
                    <span>Login</span>
                </h1>
            </div>
            <div class="row-set row">
                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 new-users">
                    <div class="content block-border">
                        <h2>New Users</h2>
                        <p>If this is your first time here, login and complete your profile.</p>
                        <h2>Returning Users</h2>
                        <p>If you have logged in before but have not completed your Profile, Login and proceed from where you left off.</p>
                        <h2>Kamp Members</h2>
                        <p>If your an Existing member of Kamp, either login to manage your profile or use the link below to request an account. </p>
                    </div>
                    <div class="buttons-set">
                        <button type="button" title="Registration" class="vina-button" onclick="window.location='/t/vina_dongky/index.php/en/my-account/my-account/edit'"><span><span>Request Account</span></span></button>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 login-users">
                    {{ form_start(loginForm) }}
                    <fieldset class="userdata content block-border">
                        <h2>Kamp Login</h2>
                        <p>Use the form below to Login:</p>
                        <div class="form-list">
                            <div id="com-form-login-username" class="input-box">
                                {{ form_row(loginForm._username,{'attr':{'class':'inputbox'}}) }}
                            </div>
                            <div id="com-form-login-password" class="input-box">
                                {{ form_row(loginForm._password,{'attr':{'id':'modlgn-passwd'}}) }}
                                <input type="hidden" name="_target_path" value="update"/>
                                <input type="hidden" name="_failure_path" value="profile-login"/>

                            </div><br/>
                            <div id="com-form-login-password" class="input-box">
                                <input type="submit" name="Submit" class="default width30" value="Login">
                            </div>

                        </div>
                    </fieldset>

                    <div class="buttons-set">

                    </div>
                    <div class="clr"></div>
                    {{ form_end(loginForm) }}
                </div>
            </div>
        </div>

    </div>



{% endblock body %}
