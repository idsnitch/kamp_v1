                            <div class="form-control-feedback">
                                <i class="icon-user-plus text-muted"></i>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group has-feedback">
                            <div><label for="app_bundle_registration_form_producerNames">Relationship to Producer</label>
                                {{ form_row(onboardForm.producerRelationship) }}</div>
