                                <i class="icon-user-plus text-muted"></i>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group has-feedback">
                            {{ form_row(onboardForm.lastName) }}
                            <div class="form-control-feedback">
                                <i class="icon-user-check text-muted"></i>
                            </div>
                        </div>
                    </div>
                </div>


                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group has-feedback">
                            {{ form_row(onboardForm.email.first,{
                                'label': 'Your Email'
                            }) }}
                            <div class="form-control-feedback">
                                <i class="icon-mention text-muted"></i>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group has-feedback">
                            {{ form_row(onboardForm.email.second,{
                                'label': 'Repeat Email'
                            }) }}
                        </div>
                        <div class="form-control-feedback">
                            <i class="icon-mention text-muted"></i>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group has-feedback">
                            {{ form_row(onboardForm.plainPassword.first,{
                                'label': 'Password'
                            }) }}
                            <div class="form-control-feedback">
                                <i class="icon-mention text-muted"></i>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group has-feedback">
                            {{ form_row(onboardForm.plainPassword.second,{
                                'label': 'Repeat Password'
                            }) }}
                        </div>
                        <div class="form-control-feedback">
                            <i class="icon-mention text-muted"></i>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <label for="app_bundle_corporate_form_termsOfService" class="required">Terms & Conditions</label>                                <div>
                            <div style="color: red">{{ form_errors(onboardForm.isTermsAccepted) }}</div>

                            <div class="col-md-12" style="height: 200px;overflow-y: scroll;border:1px #00f0f0 solid">
                                {% include 'onboard/terms.htm.twig' %}

                                <div class="checkbox">
                                    {{ form_row(onboardForm.isTermsAccepted,{
                                        'label': 'Accept Terms of Service'
                                    }) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="">
                        <button type="submit" style="background-color: #e22532;text-align: left" class="btn bg-teal-400 btn-labeled btn-labeled-left ml-6" formnovalidate><b><i
                                        class="fa fa-plus-circle"></i></b> Register
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- /registration form -->


    {{ form_end(onboardForm) }}
