{% extends 'base.htm.twig' %}
{% block title %}
    Membership
{% endblock %}
{% block javascript %}

<script type="text/javascript">
    jQuery(document).ready(function() {
        jQuery('#app_bundle_registration_form_userType').on('change', function() {
            if (this.value === "Sole Proprietorship" || this.value==="Partnership" || this.value==="Limited Company" ){
                jQuery("#company").fadeIn("slow");
                var label1 = jQuery("#company label");
                label1.addClass("required");
            }else{
                jQuery("#company").fadeOut("slow");
            }

            if (this.value === "Deceased Producer" ){
                jQuery("#deceased").fadeIn("slow");
                jQuery("#producerNames").fadeIn("slow");
                var label2 = jQuery("#producerNames label");
                label2.addClass("required");
            }else{
                jQuery("#deceased").fadeOut("slow");
                jQuery("#producerNames").fadeOut("slow");
            }

        });
    });
</script>

{% endblock %}
{% block body %}
<style>
    @media only screen and (max-width: 640px) {
        #sp-left,#sp-right{
            display:none;
        }
        .com-content #sp-main-body, .view-article #sp-main-body{
            margin-top:0px;
        }
        .com-sppagebuilder #sp-component, .com-search #sp-component, .com-content #sp-component {
            min-width: 340px;
        }
    }
</style>
<h2 style="text-align: center;font-size: 21px">Membership Registration - Step 1</h2>
<p style="text-align: center;">There are two (2) steps in the KAMP Membership application process. This is Step 1. <br/>Kindly complete both steps.</p>
{{ form_start(onboardForm) }}


<div class="row">
    <div class="">
        <div class="panel registration-form">
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group has-feedback">
                            {{ form_row(onboardForm.userType) }}
                            <div class="form-control-feedback">
                                <i class="icon-user-plus text-muted"></i>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group has-feedback">
                            {{ form_row(onboardForm.phoneNumber,{
                                'label':'Phone Number',
                                'required':true,

                            }) }}
                            <div class="form-control-feedback">
                                <i class="icon-user-plus text-muted"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row" style="display: none;" id="company">
