{% extends 'adminBase.htm.twig' %}
{% block title %}Rejected Users{% endblock %}

{% block body %}
    <div id="content" class="app-content box-shadow-z0" role="main">

        <div ui-view class="app-body" id="view">

            <!-- ############ PAGE START-->
            {{ include(':admin/partials:top.htm.twig') }}
            <div class="padding">
                <div class="box">
                    <div class="box-header">
                        <h2>Rejected Profiles</h2>
                    </div>
                    <div class="table-responsive">
                        <table id="data" class="table table-striped b-t b-b">
                            <thead>
                            <tr>
                                <th  style="width:20%">Names</th>
                                <th  style="width:15%">Stage Name</th>
                                <th  style="width:15%">Email</th>
                                <th  style="width:15%">Created On</th>
                                <th  style="width:25%">Rejected On</th>
                                <th  style="width:25%">Manage</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for user in users  %}
                                <tr>
                                    <td><a style="color:#0cc2aa" href="{{ path('review-profile',{'id': user.id }) }}">{{ user.fullName }}</a></td>
                                    <td>{{ user.stageName }}</td>
                                    <td>{{ user.emailAddress }}</td>
                                    <td>{{ user.createdAt | date("F jS \\a\\t g:ia") }}</td>
                                    <td>{{ user.processedAt | date("F jS \\a\\t g:ia") }}</td>
                                    <td> <a href="{{ path('review-profile',{'id': user.id }) }}"
                                            class="btn btn-xs white"><i title="Manage" class="fa fa-pencil"></i> </a>
                                        <a href="{{ path('review-profile',{'id': user.id }) }}"
                                           class="btn btn-xs white btn-icon"><i title="Export" class="fa fa-file-pdf-o"></i></a></td>
                                </tr>
                            {% endfor  %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- ############ PAGE END-->

        </div>
    </div>
{% endblock %}