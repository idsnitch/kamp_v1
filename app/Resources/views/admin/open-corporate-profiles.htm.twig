{% extends 'adminBase.htm.twig' %}
{% block title %}Open Profiles{% endblock %}
{% block corporate %} active {% endblock %}
{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header" data-background-color="red">
                        <h4 class="title" style="color: #fff;">Open CorporateProfiles</h4>
                    </div>
                    <div class="card-content table-responsive">
                        <table id="datatables" class="table table-striped table-no-bordered table-hover material-datatables" cellspacing="0" width="100%" style="width:100%">
                            <thead>
                            <tr>
                                <th>Full Names</th>
                                <th>Contact Names</th>
                                <th>ID Number</th>
                                <th>Created At</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for user in users %}
                                <tr>
                                    <td>{{ user.companyName }}&nbsp;</td>
                                    <td>{{ user.firstDirectorNames }}</td>
                                    <td>{{ user.firstDirectorIdNumber }}</td>

                                    <td>{{ user.createdAt | date }}
                                    </td>
                                    <td class="text-primary">
                                        <a title="Manage Profile" href="{{ path('review-corporate-profile', {'id': user.id }) }}" class="btn btn-simple btn-warning btn-icon edit"><i class="material-icons">dvr</i></a>
                                    </td>
                                </tr>
                        {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
{% endblock %}