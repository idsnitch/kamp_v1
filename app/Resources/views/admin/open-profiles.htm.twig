{% extends 'adminBase.htm.twig' %}
{% block title %}Open Profiles{% endblock %}
{% block open %} active {% endblock %}
{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header" data-background-color="red">
                        <h4 class="title" style="color: #fff;">Open Profiles</h4>
                        <p class="category">Open Individual Profiles</p>
                    </div>
                    <div class="card-content table-responsive">
                        <table id="datatables" class="table table-striped table-no-bordered table-hover material-datatables" cellspacing="0" width="100%" style="width:100%">
                            <thead>
                            <tr>

                                <th>Completed On</th>
                                <th>Full Names</th>
                                <th>ID Number</th>
                                <th>Gender</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for user in users %}
                                <tr>

                                    <td>{{ user.createdAt | date }}
                                    <td>{{ user.applicantName }}&nbsp;
                                        {% if user.user.userType =="Deceased Producer" %}<br/><i>For Deceased Producer</i>
                                    {% endif %}
                                    </td>
                                    <td>{{ user.idNumber }}</td>
                                    <td>{{ user.gender }}</td>

                                    </td>
                                    <td class="text-primary">
                                        <a title="Manage Profile" href="{{ path('review-profile', {'id': user.id }) }}" class="btn btn-simple btn-warning btn-icon edit"><i class="material-icons">dvr</i></a>
                                    </td>
                                </tr>
                          {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
{% endblock %}